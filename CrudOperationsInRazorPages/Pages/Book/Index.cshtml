@page
@model CrudOperationsInRazorPages.Pages.Book.IndexModel
@{
    ViewData["Title"] = "Book List";
}

<a  asp-page="Create" class="btn btn-primary">Create New Book.</a>

<div class="card shadow mt-3">
    <div class="card-header">
        <h3>@ViewData["Title"]</h3>
    </div>
    <div class="card-body">
        <table class="table table-striped table-hover table-responsive">
            <thead>
                <tr>
                    <th>@Html.DisplayNameFor(Model => Model.Books[0].Id)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Books[0].BookTitle)</th>
                    <th>@Html.DisplayNameFor(Model => Model.Books[0].BookDescription)</th>                   
                    <th>@Html.DisplayNameFor(Model => Model.Books[0].Author)</th>     
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Books != null && Model.Books.Any())
                {
                    @foreach (var book in Model.Books)
                    {
                        <tr>

                       
                    <td>@Html.DisplayFor(Model => book.Id)</td>
                    <td>@Html.DisplayFor(Model => book.BookTitle)</td>
                    <td>@Html.DisplayFor(Model => book.BookDescription)</td>
                    <td>@Html.DisplayFor(Model => book.Author)</td>
                    <td>
                        <a asp-page="./Edit" asp-route-id="@book.Id" class="btn btn-warning">Edir.</a>
                        <a asp-page="./Delete" asp-route-id="@book.Id" class="btn btn-danger">Delete.</a>
                    </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="5">
                            No Books are available at the moment.
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>